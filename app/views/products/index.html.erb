<div class="container">
  <div class="row text-center">
    <div class="col-lg-6 mt-3">
      <%= render 'filter' %>
    </div>
    <div class="col-lg-6 mt-3  table-responsive">
      <table class="table table-striped table-dark table-bordered table-hover">
        <thead class="thead-light">
        <tr>
          <th>Title</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @products.each do |product| %>
          <%= render partial: 'product', locals: { product: product } %>
        <% end %>
        </tbody>
      </table>
      <% if @products.next_page || @products.prev_page  %>
        <div>
          <%= link_to_prev_page @products, '<' %>
          Page
          <%= link_to_next_page @products, '>' %>
        </div>
      <% end %>
    </div>
    <%= render template: 'shared/modal' %>
  </div>
</div>
